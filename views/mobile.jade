html(class='no-js')
  //<![endif]
  head
    meta(charset="utf-8")
    title= title + ' | iwantmap'
    meta(name="HandheldFriendly", content="True")
    meta(name="MobileOptimized", content="320")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(http-equiv="cleartype", content="on")

    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/main-mobile.css')
    script(src='/js/modernizr-2.6.2.min.js')
  body

    header.cp-toolbar
      h1.cp-toolbar-title= title

    - if (routes && routes.length)
      div.md-route-container

        - each route, i in routes
          div.md-route

            div.md-route-decoration
              svg.md-route-decoration-connection-line(width="40", height="100%", id='js-route-connection-line-'+i)


            ol.md-route-content

              - each place in route
                - if (place.directions)
                  li.md-route-directions
                    a.md-route-directions-link(href=place.url, target="_blank") Get directions
                - else
                  li.md-route-place(data-reference=place.reference)
                    h2.md-route-place-name= place.name
                    h3.md-route-place-address= place.address


    - if (noRoutesPlaces && noRoutesPlaces.length)
      div.md-place-container
        ul.md-place-list
          li.md-place-item


    - if (!routes && !noRoutesPlaces)


